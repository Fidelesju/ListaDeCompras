<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.ListaCompras" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_900</item>
        <item name="colorPrimaryVariant">@color/blue_900</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blue_500</item>
        <item name="colorSecondaryVariant">@color/blue_900</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.ListaCompras" parent="Base.Theme.ListaCompras" />

    <style name="item_title">
        <item name="android:textColor">@color/blue_900</item>
        <item name="android:textSize">28sp</item>
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">@font/rubik_semibold</item>
    </style>

    <style name="header">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">@font/rubik_semibold</item>
    </style>

    <style name="item">
        <item name="fontFamily">@font/rubik_regular</item>
        <item name="android:textColor">@color/blue_900</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="buttonPrimary" parent="Widget.AppCompat.Button">
        <item name="fontFamily">@font/rubik_semibold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="flootingActionBar" parent="ThemeOverlay.Material3.FloatingActionButton.Surface">
        <item name="android:backgroundTint">@color/blue_900</item>
    </style>
</resources>